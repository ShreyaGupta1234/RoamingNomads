<% layout("/layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <br />
      <h3>Edit your Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
      >
        <div class="mb-2">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div>

        <div class="mb-2">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
<%= listing.description %>
            </textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-2">
          <label for="image" class="form-label">Image Link</label>
          <input
            name="listing[image]"
            value="<%= listing.image %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Image link or url should be valid</div>
        </div>

        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="prize" class="form-label">Prize</label>
            <input
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Prize should be valid</div>
          </div>

          <div class="mb-2 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>

        <div class="mb-2">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark edit-btn">Edit</button>
      </form>
    </body>
  </div>
</div>
<script src="/js/script.js"></script>
